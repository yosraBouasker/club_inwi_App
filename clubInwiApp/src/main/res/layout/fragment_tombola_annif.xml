<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inwi.clubinwi.fragments.TombolaAnnifFragment">

    <RelativeLayout
        android:id="@+id/layoutChrono"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradien_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.inwi.clubinwi.views.MyTextView
                android:id="@+id/tv_next_ticket_msg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="10dp"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:font_style="bold" />


        </LinearLayout>

        <LinearLayout
            android:layoutDirection="ltr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.inwi.clubinwi.views.MyTextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ac2783"
                    android:textSize="20sp"
                    app:font_style="bold"
                    tools:text="00  " />

                <com.inwi.clubinwi.views.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/days"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:font_style="light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.inwi.clubinwi.views.MyTextView
                    android:id="@+id/hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ac2783"
                    android:textSize="20sp"
                    app:font_style="bold"
                    tools:text="00 : " />

                <com.inwi.clubinwi.views.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hours"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:font_style="light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.inwi.clubinwi.views.MyTextView
                    android:id="@+id/minuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ac2783"
                    android:textSize="20sp"
                    app:font_style="bold"
                    tools:text="00 : " />

                <com.inwi.clubinwi.views.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minuts"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:font_style="light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.inwi.clubinwi.views.MyTextView
                    android:id="@+id/second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ac2783"
                    android:textSize="20sp"
                    app:font_style="bold"
                    tools:text="00" />

                <com.inwi.clubinwi.views.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seconde"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:font_style="light" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
