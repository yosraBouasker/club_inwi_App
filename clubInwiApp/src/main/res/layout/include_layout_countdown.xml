<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rl_countdown_days">

            <com.inwi.clubinwi.views.MyTextView
                android:id="@+id/tv_countdown_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingRight="4dp"
                android:textColor="#ac2783"
                android:textSize="32sp"
                custom:font_style="bold"
                android:text="00" />

            <com.inwi.clubinwi.views.MyTextView
                android:layout_below="@+id/tv_countdown_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/days"
                android:layout_gravity="center"
                android:textColor="@color/violet"
                android:textSize="12sp"
                custom:font_style="light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rl_countdown_hours">

            <com.inwi.clubinwi.views.MyTextView
                android:id="@+id/tv_countdown_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#ac2783"
                android:textSize="32sp"
                custom:font_style="bold"
                android:text="00" />

            <com.inwi.clubinwi.views.MyTextView
                android:layout_below="@+id/tv_countdown_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/hours"
                android:layout_gravity="center"
                android:textColor="@color/violet"
                android:textSize="12sp"
                custom:font_style="light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rl_countdown_minutes">

            <com.inwi.clubinwi.views.MyTextView
                android:id="@+id/tv_countdown_minutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#ac2783"
                android:textSize="32sp"
                custom:font_style="bold"
                android:text="00" />

            <com.inwi.clubinwi.views.MyTextView
                android:layout_below="@+id/tv_countdown_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/minuts"
                android:layout_gravity="center"
                android:textColor="@color/violet"
                android:textSize="12sp"
                custom:font_style="light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rl_countdown_seconds">

            <com.inwi.clubinwi.views.MyTextView
                android:id="@+id/tv_countdown_seconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:textColor="#ac2783"
                android:textSize="32sp"
                custom:font_style="bold"
                android:text="00" />

            <com.inwi.clubinwi.views.MyTextView
                android:layout_below="@+id/tv_countdown_seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/seconde"
                android:layout_gravity="center"
                android:textColor="@color/violet"
                android:textSize="12sp"
                custom:font_style="light" />
        </RelativeLayout>
    </LinearLayout>

    <com.inwi.clubinwi.views.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="@string/text_before_op_expiry"/>

</LinearLayout>